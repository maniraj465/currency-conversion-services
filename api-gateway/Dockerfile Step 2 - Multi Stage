# Step 2 - Multi Stage
# Stage 1: Build
FROM maven:3.8.7-openjdk-18-slim AS build
WORKDIR /home/app
COPY . /home/app
RUN mvn -f /home/app/pom.xml clean package

# Stage 2: Runtime
FROM openjdk:18-jdk-slim
COPY --from=build /home/app/target/*.jar /app.jar
EXPOSE 8765
ENTRYPOINT ["java", "-jar", "/app.jar"]